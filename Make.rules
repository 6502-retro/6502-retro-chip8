# Assembler, linker and scripts
AS = ca65
LD = ld65
CC = cl65

TOP = .
LOADTRIM = $(TOP)/loadtrim.py
CFG = $(TOP)/apps.cfg
INCLUDES = -I $(TOP)/inc
LIB = -I $(TOP)/lib

# Assembler flags
ASFLAGS += $(INCLUDES) -g --feature labels_without_colons --cpu 65C02 --feature string_escapes
# Compiler flags
CCFLAGS = --cpu 65C02 -t none -Os -Ln $(BUILD_DIR)/$(APPNAME).sym -C $(CFG) -m $(BUILD_DIR)/$(APPNAME).map -o $(BUILD_DIR)/$(APPNAME).raw $(LIB) $(INCLUDES) -l $(BUILD_DIR)/$(APPNAME).lst

LOAD_ADDR = 800

BUILD_DIR = build

OBJS = $(addprefix $(BUILD_DIR)/, $(SOURCES:.s=.o))

all: clean $(BUILD_DIR)/$(APPNAME).com

clean:
	rm -fr $(BUILD_DIR)/*

$(BUILD_DIR)/%.o: %.s
	@mkdir -p $$(dirname $@)
	$(AS) $(ASFLAGS) -l $(BUILD_DIR)/$*.lst $< -o $@

$(BUILD_DIR)/$(APPNAME).com: $(BUILD_DIR)/$(APPNAME).raw
	$(LOADTRIM) build/$(APPNAME).raw build/$(APPNAME).com $(LOAD_ADDR)
